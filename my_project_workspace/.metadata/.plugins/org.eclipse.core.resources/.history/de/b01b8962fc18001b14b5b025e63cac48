[Config Wireless01]
description = Two hosts communicating wirelessly
network = Tester
sim-time-limit = 20s

*.host*.ipv4.arp.typename = "GlobalArp"

**.displayAddresses = true
**.verbose = true

*.hostA.numApps = 1
*.hostA.app[0].typename = "UdpBasicApp"
*.hostA.app[0].destAddresses = "hostB"
*.hostA.app[0].destPort = 5000
*.hostA.app[0].messageLength = 1000B
*.hostA.app[0].sendInterval = exponential(12ms)
*.hostA.app[0].packetName = "UDPData"

*.hostB.numApps = 1
*.hostB.app[0].typename = "UdpSink"
*.hostB.app[0].localPort = 5000

*.host*.wlan[0].typename = "Ieee80211Interface"
*.host*.wlan[0].mac.useAck = false
*.host*.wlan[0].mac.fullDuplex = false
#*.host*.wlan[0].radio.transmitter.communicationRange = 500m # only for unit disk radio
*.host*.wlan[0].radio.receiver.ignoreInterference = true
*.host*.wlan[0].mac.headerLength = 23B

*.host*.**.bitrate = 1Mbps

# extra lines needed for scalar radio:
**.radio.typename = "Ieee80211ScalarRadio"
**.visualizer.mediumVisualizer.packetFilter = ""

# Works up to this point; now let's add accessPoint

# MAC Addresses
**.hostA.wlan[*].address = "00-00-00-00-00-01"
**.hostB.wlan[*].address = "00-00-00-00-00-04"

# access point configuration
**.accessPoint2.wlan[0].address = "00-00-00-00-00-07"

# hostA and hostB are associated with AP2
**.host*.wlan[0].mgmt.accessPointAddress = "00-00-00-00-00-07"

# use simplified ieee802.11 management (no association, authentication etc.)
**.host*.wlan[*].mgmt.typename = "Ieee80211MgmtStaSimplified"
**.accessPoint2.wlan[*].mgmt.typename = "Ieee80211MgmtApSimplified"

# Modelling interference and communication
**.radioMedium.analogModel.ignorePartialInterference = true
**.accessPoint2.wlan[*].radio.receiver.ignoreInterference = true
**.host*.wlan[*].radio.receiver.ignoreInterference = true